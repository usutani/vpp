<h1>利用者一覧</h1>

<table>
  <thead>
    <tr>
      <th>利用者ID</th>
      <th>メールアドレス</th>
      <th>状態</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.client_user_id_str %></td>
        <td><%= user.email %></td>
        <td><%= user.status %></td>
        <td><%= link_to '詳細', user %></td>
        <td><%= link_to '編集', edit_user_path(user) %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div id='sync_users'>
  <%= link_to 'VPPストアの情報と同期する', sync_users_path %>
</div>
